<% provide(:title, "Registration Information") %>
<h1>Sumber Informasi Penerimaan Mahasiswa Baru</h1>
<div class="row">
  <div col-md-6 col-md-offset-3>
    <%= form_with(model: @source, local: true, data: {turbo: false}) do |f| %>
        <%= render "shared/error_messages", object: f.object %>
          <%= f.select :sumber_informasi, options_from_collection_for_select(
            @source_information_list, 'informasi', 'informasi'
          ), {}, {class: 'form-select', required: true} %>
          <%= f.select :motivasi, options_from_collection_for_select(
            @source_motivation_list, 'motivasi', 'motivasi'
          ), {}, {class: 'form-select', required: true} %>
          <%= f.number_field :jumlah_n, class: 'form-control', placeholder: 'Jumlah N' %>
          <%= f.submit "Simpan", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>