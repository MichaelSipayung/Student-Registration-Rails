<% provide(:title, "Parent Information") %>
<h1>Informasi Data Orang Tua</h1>
<div class="row">
  <div col-md-6 col-md-offset-3>
    <%= form_with(model: @parent, local: true, data: {turbo: false}) do |f| %>
        <%= render "shared/error_messages", object: f.object %>
          <%= f.text_field :nama_ayah, class: 'form-control', placeholder: 'Nama Ayah' %>
          <%= f.text_field :nama_ibu, class: 'form-control', placeholder: 'Nama Ibu' %>
          <%= f.number_field :nik_ayah, class: 'form-control', placeholder: 'Nik Ayah' %>
          <%= f.number_field :nik_ibu, class: 'form-control', placeholder: 'Nik Ibu' %>
          <%= f.select :pendidikan_ayah, options_from_collection_for_select(@parent_education, 'pendidikan', 'pendidikan'),
                       {}, {class: 'form-select', required: true}%>
          <%= f.select :pendidikan_ibu, options_from_collection_for_select(@parent_education, 'pendidikan', 'pendidikan'),
                       {}, {class: 'form-select', required: true}%>
          <%= f.select :pekerjaan_ayah, options_from_collection_for_select(@parant_job, 'pekerjaan', 'pekerjaan'),
                       {}, {class: 'form-select', required: true}%>
          <%= f.select :pekerjaan_ibu, options_from_collection_for_select(@parant_job, 'pekerjaan', 'pekerjaan'),
                       {}, {class: 'form-select', required: true}%>
          <%= f.date_field :tanggal_lahir_ayah, class: 'form-control', placeholder: 'Tanggal Lahir Ayah' %>
          <%= f.date_field :tanggal_lahir_ibu, class: 'form-control', placeholder: 'Tanggal Lahir Ibu' %>
          <%= f.submit "Simpan", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>